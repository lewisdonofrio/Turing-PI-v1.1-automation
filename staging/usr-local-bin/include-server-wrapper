#!/usr/bin/env python3
import os
import sys

INC_DIR = "/usr/lib/python3.13/site-packages/include_server"

# Change working directory so relative imports work
os.chdir(INC_DIR)

# Ensure the directory is on sys.path
sys.path.insert(0, INC_DIR)

# Import the include_server module
import include_server

if __name__ == "__main__":
    # Parse command-line options (reads sys.argv internally)
    include_server._ParseCommandLineOptions()
    
    # Start the include-server (no arguments)
    include_server.Main()
